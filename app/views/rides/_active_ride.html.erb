<strong>Pickup:</strong> <%= ride.pickup_address %><br>
<strong>Dropoff:</strong> <%= ride.dropoff_address %><br>
<strong>Distance:</strong> <%= ride.distance %> miles<br>
<strong>Length of Trip:</strong> <%= ride.duration %> minutes<br>
<strong>Passengers:</strong> <%= ride.num_passengers %><br>
<%= react_component('RideStatus', initialRide: ride, initialTime: ride.send_most_recent_time) %>


<% if current_user.driver? %>
  <%= button_to ride.status_change_button, ride_path(ride), method: "put" %>
<% end %>

