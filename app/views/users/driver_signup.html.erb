<div class="col-md-4 col-md-offset-4">
  <h1>Driver Signup</h1>
  <%= form_for(User.new) do |f| %>

    <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name,  :placeholder => "name", class: "form-control"%>
    </div>

    <div class="form-group">
    <%= f.label :email %>
    <%= f.text_field :email,  :placeholder => "email", class: "form-control"%>
    </div>

    <div class="form-group">
    <%= f.label :phone_number %>
    <%= f.text_field :phone_number,  :placeholder => "phone", class: "form-control"%>
    </div>

    <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password,  :placeholder => "password", class: "form-control"%>
    </div>

    <div class="form-group">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation,  :placeholder => "confirm password", class: "form-control"%>
    </div>

    <div class="form-group">
    <%= f.label :car_make %>
    <%= f.text_field :car_make,  :placeholder => "car make", class: "form-control"%>
    </div>

    <div class="form-group">
    <%= f.label :car_model %>
    <%= f.text_field :car_model,  :placeholder => "car model", class: "form-control"%>
    </div>

    <div class="form-group">
    <%= f.label :car_capacity %>
    <%= f.text_field :car_capacity,  :placeholder => "car capacity(as a number)", class: "form-control"%>
    </div>

    <%= f.hidden_field :role, value: "driver" %>
    <p class= "center"><%= f.submit "Register", class:"btn btn-md btn-success" %></p>
  <% end %>
</div>
