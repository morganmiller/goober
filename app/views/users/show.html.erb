Welcome, <%= current_user.name %>
<br>
<% if current_user.rider? %>
  <%= render 'users/rider_dashboard' %>
<% else %>
  <%= render 'users/driver_dashboard' %>
<% end %>
<br><br>
<% unless current_user.rides.completed_rides.empty? %>
  <div id="completed-rides" class="col-lg-8 col-lg-offset-2">
    <%= render 'users/completed_rides' %>
  </div>
<% end %>
